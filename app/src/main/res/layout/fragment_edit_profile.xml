<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Back -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_arrow_back"
            app:tint="@color/white" />

        <!-- Profile image (id sesuai yang dibutuhkan oleh kode) -->
        <ImageView
            android:id="@+id/imgProfileEdit"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_person"
            android:background="@drawable/circle_bg"
            android:padding="20dp" />

        <!-- Tombol change photo (bisa berupa TextView atau Button - ID harus btnChangePhoto) -->
        <TextView
            android:id="@+id/btnChangePhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Photo"
            android:textColor="@color/accent_purple"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:focusable="true" />

        <!-- Username edit (id sesuai etUsernameEdit) -->
        <EditText
            android:id="@+id/etUsernameEdit"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/search_background"
            android:hint="Username"
            android:textColor="@color/white"
            android:padding="12dp" />

        <Button
            android:id="@+id/btnSaveProfile"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Save"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/accent_purple"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </LinearLayout>

</ScrollView>
